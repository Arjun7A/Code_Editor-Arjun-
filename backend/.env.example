# API Keys (DO NOT COMMIT THESE VALUES)

# ── AI Agent (required for AI analysis) ──────────────────────────────────────
# xAI Grok key and model
# Get your key: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE_URL=https://api.x.ai/v1
# Optional model override (default in code: grok-3-latest)
GROK_MODEL=grok-3-latest
# Optional: cap AI chunk calls per PR (prevents quota burn on huge PRs)
AI_MAX_CHUNKS=10
# Optional: max seconds per AI chunk call
AI_CHUNK_TIMEOUT_SECONDS=45
# Optional: cap output tokens per AI response (lower = cheaper)
AI_MAX_OUTPUT_TOKENS=1024
# Optional strict mode: true = fail if xAI unavailable (no heuristic fallback)
AI_REQUIRE_XAI=true
# Optional heuristic fallback: false = AI-only (no rule-based fallback findings)
AI_ENABLE_HEURISTIC_FALLBACK=false

# Claude / OpenAI (optional – paid, kept for future use)
CLAUDE_API_KEY=your_claude_api_key_here

# Security scanners
SNYK_TOKEN=your_snyk_token_here
GITHUB_TOKEN=your_github_token_here
SNYK_RUN_ALL_PRS=false
SNYK_TIMEOUT_SECONDS=120
SEMGREP_TIMEOUT_SECONDS=120
SEMGREP_MAX_FILES_PER_PR=60

# Blockchain
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_CONTRACT_ADDRESS=0x...
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_EXPLORER_TX_BASE=https://sepolia.etherscan.io/tx/

# Policy engine
POLICY_RULES_PATH=app/policy/rules.yaml

# Redis cache
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_DASHBOARD_SECONDS=30
CACHE_TTL_RESULTS_SECONDS=20
CACHE_TTL_POLICY_SECONDS=60

# Database
# Local SQLite:
DATABASE_URL=sqlite:///./security_gate.db
# Supabase Postgres (replace with real values):
# DATABASE_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres

# Debug
DEBUG=True
